<div class="container">
    <div class="row d-flex justify-content-between">
        <div class="col-sm-4">
        </div>
    <div class="login-box col-sm-4">
        <p>SIGN UP</p>
        <form action="/user/signup" method="POST" autocomplete="off">
        {{#if error}}

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{error}}
        </div>
        {{/if}}
            <div class="user-box">
                <input required="" name="signname" type="text">
                <label>Username</label>
            </div>
            <div class="user-box">
                <input required="" name="signpass" type="password">
                <label>Password</label>
            </div>
            <div class="user-box">
                <input required="" name="signmail" type="email">
                <label>Email</label>
            </div>
            <div class="user-box">
                <input required="" name="signnumber" type="tel">
                <label>Mobile Number</label>
            </div>
            <button type="submit">
                Sign up
            </button>
        </form>
        <p>Already have an account? <a href="/user/login" class="a2">Log in!</a></p>
    </div>
    <div class="col-sm-4"></div>
</div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>
// Automatically close the alert after 5 seconds
$(document).ready(function(){
  window.setTimeout(function() {
    $(".alert").fadeTo(500, 0).slideUp(500, function(){
      $(this).remove(); 
    });
  }, 3000);
});
</script>
<style>
    body {
        background-color: white;
        margin: 0;
        padding: 0;
    }

    .login-box {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 400px;
        height: fit-content;
        margin-top: 25px;
        padding: 30px 40px;
        transform: translate(-50%, -55%);
        background: rgba(0, 0, 0, .9);
        box-sizing: border-box;
        box-shadow: 5px rgba(0, 0, 0, .6);
        border-radius: 10px;
    }
     @media(max-width:450px){
        .login-box{
            width: 300px;
            padding: 20px;
            height: fit-content;
        }
    }

    .login-box p:first-child {
        margin: 0 0 30px;
        padding: 0;
        color: #fff;
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .login-box .user-box {
        position: relative;
    }

    .login-box .user-box input {
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        color: #fff;
        margin-bottom: 30px;
        border: none;
        border-bottom: 1px solid #fff;
        outline: none;
        background: transparent;
    }

    .login-box .user-box label {
        position: absolute;
        top: 0;
        left: 0;
        padding: 10px 0;
        font-size: 16px;
        color: #fff;
        pointer-events: none;
        transition: .5s;
    }

    .login-box .user-box input:focus~label,
    .login-box .user-box input:valid~label {
        top: -20px;
        left: 0;
        color: #fff;
        font-size: 12px;
    }

    .login-box form button {
        position: relative;
        display: inline-block;
        padding: 10px 20px;
        font-weight: bold;
        background-color: #272727;
        color: #fff;
        font-size: 16px;
        border: #fff solid 3px;
        border-radius: 5px;
        text-decoration: none;
        text-transform: uppercase;
        overflow: hidden;
        transition: .5s;
        margin-top: 40px;
        margin-bottom: 10px;
        letter-spacing: 3px
    }

    .login-box button:hover {
        background: #fff;
        color: #272727;
        border-radius: 5px;
    }


    .login-box p:last-child {
        color: #aaa;
        font-size: 14px;
    }

    .login-box a.a2 {
        color: #fff;
        text-decoration: none;
    }

    .login-box a.a2:hover {
        background: transparent;
        color: #aaa;
        border-radius: 5px;
    }
</style>